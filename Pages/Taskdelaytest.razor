<h3>Timer: @Timer</h3>
@page "/t"
@code {
    [Parameter] 
    public int Timer { get; set; } = 0;

    public async void StartTimerAsync()
    {
        while (Timer > -1)
        {
            Timer++;
            StateHasChanged();
            await Task.Delay(1000);
        }
    }

    protected override void OnInitialized()
        => StartTimerAsync();
}